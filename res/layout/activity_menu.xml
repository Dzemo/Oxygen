<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.deep_blue.oxygen.activity.MenuActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewLastSynch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_lastsynch" />

    <Button
        android:id="@+id/buttonSynch"
        android:text="@string/menu_synch"       
            
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"      
          
		android:drawableLeft="@drawable/ic_default"
		android:gravity="left|center_vertical"
		/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buttonList"
            android:text="@string/menu_list"            
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"      
            
 			android:drawableLeft="@drawable/ic_default"
  			android:gravity="left|center_vertical"
            />

        <Button
            android:id="@+id/buttonCurrent"
            android:text="@string/menu_current"      
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"      
            
 			android:drawableLeft="@drawable/ic_default"
  			android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/buttonParam"
            android:text="@string/menu_param"      
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"      
            
 			android:drawableLeft="@drawable/ic_default"
  			android:gravity="left|center_vertical" />

        <Button
            android:id="@+id/buttonLogout"
            android:text="@string/menu_logout"       
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"      
            
 			android:drawableLeft="@drawable/ic_default"
  			android:gravity="left|center_vertical"/>

    </LinearLayout>

</LinearLayout>